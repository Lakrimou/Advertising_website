                                <a href="{{ path('user_one_registration') }}" class="btn btn-primary btn-lg"><span
                                            class="glyphicon glyphicon-tower pull-right"></span>فضاء الشركات</a>
                            </div>
                        </div>

                    </div>

                {% endif %}

            {% endif %}
</div>









{% if app.request.hasPreviousSession %}
    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="flash-{{ type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
{% endif %}

<div>
    <section class="inner-page-content border-bottom {% if app.request.attributes.get('_route') == 'company_login' %} top-pad-50 {% endif %} {% if app.request.attributes.get('_route') == 'fos_user_security_login' %} top-pad-50 {% endif %}">
        <div class="login-register {% if app.request.attributes.get('_route') == 'company_login' %} top-pad-50 {% endif %} {% if app.request.attributes.get('_route') == 'fos_user_security_login' %} top-pad-50 {% endif %}" {% if app.request.attributes.get('_route') == 'fos_user_registration_check_email' %}style="padding-top: 214px;"{% endif %}>
