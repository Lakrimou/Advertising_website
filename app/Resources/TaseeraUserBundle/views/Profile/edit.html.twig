{% extends '::layout_company.html.twig' %}
{% block body %}
<div>
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
    {% if app.request.attributes.get('_route') == 'user_one_registration' %}
    <a href="{{ path('company_logout') }}">
        {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
