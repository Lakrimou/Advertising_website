{% extends "@FOSUser/layout.html.twig" %}

{% block fos_user_content %}
                <form role="form" method="post" action="{{ path('fos_user_security_check') }}"
                      class="form-horizontal form-material" id="loginform">
                    {#<form action="{{ path("fos_user_security_check") }}" class="form-horizontal form-material" id="loginform" method="post">#}
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                    {% endif %}
                    <h3 class="box-title m-b-20 arabe text-center authentification arabe"><i class="fa fa-lock"
                                                                                             aria-hidden="true"></i>
                        {{ 'تسجيل دخول المستخدمين'|trans }}</h3>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <label for="username" class="arabe"><i class="fa fa-user" aria-hidden="true"></i>
                                {{ 'اسم المستخدم'|trans }}</label>
                            <input class="form-control" placeholder="{{ 'اسم المستخدم'|trans }}" name="_username" id="_username" type="text"
                                   value="{{ last_username }}" required="required" autofocus>
                            {#<input type="text" id="username" name="_username" value="{{ last_username }}"   class="form-control arabe" />#}
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-xs-12">
                            <label for="password" class="arabe"><i class="fa fa-unlock-alt" aria-hidden="true"></i>
                                {{ 'كلمة المرور'|trans }}</label>
                            <input class="form-control" id="_password" placeholder="{{ 'كلمة المرور'|trans }}" name="_password"
                                   type="password" required="required" value="">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="checkbox checkbox-primary pull-left p-t-0">
                                <input id="remember_me" name="_remember_me" value="on" type="checkbox"
                                       value="Remember Me">

                                <label for="remember_me" class="arabe"> {{ 'تذكرني'|trans }} </label>
                            </div>
                            {#<a href="javascript:void(0)" id="to-recover" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i> Forgot pwd?</a> #}
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <input type="submit" id="_submit" name="_submit"
                                   class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light arabe"  value="
                                   {{ 'تسجيل الدخول'|trans }}">
                        </div>
                        <div class="text-right" style="padding-right: 20px;">
                            <a href="{{ path('fos_user_resetting_request') }}">{{ 'هل نسيت كلمة السر؟'|trans }}</a>
                        </div>
                    </div>
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                </form>
            </div>
        </div>
    </section>
</div>

{% endblock %}
