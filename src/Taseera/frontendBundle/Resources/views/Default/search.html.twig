{% extends '::front.html.twig' %}
{% block title %}
    - نتائج البحث
{% endblock %}
{% block body %}
    <section class="inner-page-content border-bottom top-pad-50">
    <div class="container">
    <div class="row">
    <div class="col-md-12 col-lg-12">
    <!-- advertisement -->
    <section class="classiera-advertisement advertisement-v5 section-pad-80 border-bottom">
    <div class="tab-divs">
    <div class="view-head">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-sm-7 col-xs-8">
                    <div class="total-post">
                    </div><!--total-post-->
                </div><!--col-lg-6 col-sm-8-->
                {#<div class="col-lg-6 col-sm-5 col-xs-4">
                    <div class="view-as text-right flip">
                        <a id="grid" class="grid active" href="#"><i class="fa fa-th"></i></a>
                        <a id="list" class="list " href="#"><i class="fa fa-th-list"></i></a>
                    </div><!--view-as tab-button-->
                </div>#}<!--col-lg-6 col-sm-4 col-xs-12-->
            </div><!--row-->
        </div><!--container-->
    </div><!--view-head-->
    <div class="tab-content">
    <div role="tabpanel" class="tab-pane fade in active" id="all">
    <div class="container">
    <h2>نتائج البحث</h2>
        <div class="row">
            {% for result in results %}
               <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                   {% for media in result.medias %}

                       {% if loop.index == 1 %}
                        <div class="text-center">
                            <img src="{{ asset('backend/img/medias/'~media.media) }}" alt="{{ result.nameItem }}" width="250" height="270">
                        </div>
                           <div class="text-center center-block">
                               <p class="text-center">

                                   {% for category in result.categories %}
                                       {% if result.userone is not null %}
                                           <a href="{{ path('taseerafrontend_adds', {'id':result.userone.id, 'id_category':category.id, 'id_item':result.id }) }}">
                                               {{ result.nameItem }}

                                           </a>
                                           {% endif %}

                                   {% endfor %}
                               </p>
                           </div>
                       {% endif %}

                   {% endfor %}




               </div>
            {% endfor %}
        </div>
    </div></div></div></div></section></div></div></div></section>

{% endblock %}