                    <div class="border-section border details">
                        <h4 class="border-section-heading text-uppercase"><i class="fa fa-file-text-o"></i>&nbsp&nbsp
                            {{ 'تفاصيل الإعلان'|trans }}
                        </h4>
                        <div class="post-details">
                            <ul class="list-unstyled clearfix">
                                <li>
                                    <p>{{ 'أضيف'|trans }} :
                                        <span class="pull-right flip">{% if item.datePub %}{{ item.datePub|date('H:i:s Y-m-d') }}{% endif %}</span>
                                    </p>
                                </li><!--PostDate-->
                                <!--Price Section -->
                                <li>
                                    <p>{{ 'سعر البيع'|trans }}:
									<span class="pull-right flip">
										{{ item.price }}QR									</span>
                                    </p>
                                </li><!--Sale Price-->
                                <!--Price Section -->
