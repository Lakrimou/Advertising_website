{% extends 'base.html.twig' %}

{% block body %}
    <h1>Items list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nameitem</th>
                <th>Description</th>
                <th>Datepub</th>
                <th>Dateupdate</th>
                <th>Dateexpiration</th>
                <th>Bspam</th>
                <th>Bactive</th>
                <th>Benabled</th>
                <th>Sip</th>
                <th>Bshowemail</th>
                <th>Bpremium</th>
                <th>Price</th>
                <th>Contactname</th>
                <th>Contactemail</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td><a href="{{ path('item_show', { 'id': item.id }) }}">{{ item.id }}</a></td>
                <td>{{ item.nameItem }}</td>
                <td>{{ item.description }}</td>
                <td>{% if item.datePub %}{{ item.datePub|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if item.dateUpdate %}{{ item.dateUpdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if item.dateExpiration %}{{ item.dateExpiration|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if item.bSpam %}Yes{% else %}No{% endif %}</td>
                <td>{% if item.bActive %}Yes{% else %}No{% endif %}</td>
                <td>{% if item.bEnabled %}Yes{% else %}No{% endif %}</td>
                <td>{{ item.sIp }}</td>
                <td>{% if item.bShowEmail %}Yes{% else %}No{% endif %}</td>
                <td>{% if item.bPremium %}Yes{% else %}No{% endif %}</td>
                <td>{{ item.price }}</td>
                <td>{{ item.contactName }}</td>
                <td>{{ item.contactEmail }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('item_show', { 'id': item.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('item_edit', { 'id': item.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('item_new') }}">Create a new item</a>
        </li>
    </ul>
{% endblock %}
